<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App52.Views.ChangeCourseTimeview">
    <ContentPage.Content>
        <Grid Margin="20">
            <Grid.RowDefinitions>

                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>

            </Grid.RowDefinitions>
        


            <StackLayout Grid.Row="0" VerticalOptions="Center">
                <Label Text="Change Course Time" FontAttributes="Bold" FontSize="Title" TextColor="Gray" HorizontalTextAlignment="Center" ></Label>
                <Entry Text="{Binding SName}" Placeholder="Student Name"></Entry>
                <Entry Text="{Binding snum}" Placeholder="Student Number"></Entry>
                <Entry Text="{Binding cnum}" Placeholder=" Course Number"></Entry>
                <Entry Text="{Binding currentDivision}" Placeholder=" current Division Number"></Entry>

                <Entry Text="{Binding newDivision}" Placeholder=" New Division Number"></Entry>

          
                <Entry Text="{Binding description}" Placeholder="Description"></Entry>

                <Button WidthRequest="200" Text="Submit" Command="{Binding AddCoachesCommand}"/>



            </StackLayout>
        </Grid>


    </ContentPage.Content>
</ContentPage>