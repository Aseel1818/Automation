<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App52.ModelView"
             x:Class="App52.Views.DeleteCourseView">
    <ContentPage.Content>


        <Grid Margin="20">
            <Grid.RowDefinitions>

                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>

            </Grid.RowDefinitions>



            <StackLayout Grid.Row="0" VerticalOptions="Center">
                <Label Text="Delete Course" FontAttributes="Bold" FontSize="Title" TextColor="Gray" HorizontalTextAlignment="Center" ></Label>
                <Entry Text="{Binding SName}" Placeholder="Student Name"></Entry>
                <Entry Text="{Binding snum}" Placeholder="Student Number"></Entry>
                <Entry Text="{Binding cnum}" Placeholder=" Course Number"></Entry>
                <Entry Text="{Binding divisionnumber}" Placeholder="Division Number"></Entry>

                <Entry Text="{Binding description}" Placeholder="Description"></Entry>

                <Button WidthRequest="200" Text="Submit" Command="{Binding AddCoachesCommand}"/>



            </StackLayout>
        </Grid>




    </ContentPage.Content>
</ContentPage>